<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".Login">

    <RelativeLayout
        android:id="@+id/login_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="Phone Number"
            android:inputType="number"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textColorHint="#7C7C7C"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Phone"
            android:layout_margin="20dp"
            android:background="@drawable/edit_text_shape"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textColorHint="#7c7c7c"
            android:textSize="17sp" />


        <Button
            android:id="@+id/Log_in_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Password"
            android:layout_margin="20dp"
            android:background="@drawable/buttonshape"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Log_in_in"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:text="Don't have an account? Sign Up here"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:outlineAmbientShadowColor="#fff"
            android:outlineSpotShadowColor="#fff"
            android:padding="5dp"
            android:shadowColor="#fff"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textOff="I am an Admin"
            android:textOn="I am a User"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/frontpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/logo_se"
        android:visibility="gone" />


</RelativeLayout>