<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AdminPanel">

    <Button
        android:id="@+id/new_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="New Product"
        android:textColor="#fff" />

    <Button
        android:id="@+id/new_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_product"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="New Category"
        android:textColor="#fff" />

    <Button
        android:id="@+id/edit_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_customers"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Edit Product"
        android:textColor="#fff" />

    <Button
        android:id="@+id/view_customers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="View Customers"
        android:textColor="#fff" />

    <Button
        android:id="@+id/logout_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="#fff" />
</LinearLayout>